        "value": {
          "border": "{line.disabled}"
        },
        "type": "composition"
      },
      "alert": {
        "value": {
          "border": "{line.alert}",
          "boxShadow": "{outline.inner.alert}"
        },
        "type": "composition"
      },
      "error": {
        "value": {
          "border": "{line.error}",
          "boxShadow": "{outline.inner.error}"
