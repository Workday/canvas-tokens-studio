      },
      "type": "border"
    },
    "disabled": {
      "value": {
        "color": "{palette.soap.600}",
        "width": "1",
        "style": "inner"
      },
      "type": "border"
    },
    "alert": {
      "value": {
        "color": "{palette.cantaloupe.600}",
        "width": "1",
        "style": "inner"
