      "type": "border"
    },
    "hover": {
      "value": {
        "color": "{palette.licorice.500}",
        "width": "1",
        "style": "inner"
      },
      "type": "border"
    },
    "active": {
      "value": {
        "color": "{palette.blueberry.400}",
        "width": "1",
