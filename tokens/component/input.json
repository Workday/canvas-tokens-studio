{
  "input": {
    "container": {
      "default": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{color.border.input.default}",
          "fill": "{color.bg.default}",
          "boxShadow": "none"
        },
        "type": "composition"
      },
      "hover": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{color.border.input.hover}",
          "fill": "{color.bg.default}",
          "boxShadow": "none"
        },
        "type": "composition"
      },
      "focus": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{brand.common.focus-outline}",
          "fill": "{color.bg.default}",
          "boxShadow": "{focus.inactive}"
        },
        "type": "composition"
      },
      "error": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{brand.common.error-inner}",
          "fill": "{color.bg.default}",
          "boxShadow": "{focus.error}"
        },
        "type": "composition"
      },
      "alert": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{brand.alert.darkest}",
          "fill": "{color.bg.default}",
          "boxShadow": "{focus.alert}"
        },
        "type": "composition"
      }
    }
  }
}