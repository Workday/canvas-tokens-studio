{
  "input": {
    "container": {
      "default": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{color.border.input.default}",
          "fill": "{color.bg.default}",
          "boxShadow": "none"
        },
        "type": "composition"
      },
      "hover": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{color.border.input.hover}",
          "fill": "{color.bg.default}",
          "boxShadow": "none"
        },
        "type": "composition"
      },
      "focus": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{brand.common.focus-outline}",
          "fill": "{color.bg.default}",
          "boxShadow": "{input.focus.inactive}"
        },
        "type": "composition"
      },
      "alert": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{brand.alert.darkest}",
          "fill": "{color.bg.default}",
          "boxShadow": "{input.focus.alert}"
        },
        "type": "composition"
      },
      "error": {
        "value": {
          "borderWidth": "1",
          "borderRadius": "{shape.medium}",
          "borderColor": "{brand.common.error-inner}",
          "fill": "{color.bg.default}",
          "boxShadow": "{input.focus.error}"
        },
        "type": "composition"
      }
    },
    "focus": {
      "outer": {
        "ring": {
          "value": [
            {
              "x": "0",
              "y": "0",
              "blur": "0",
              "spread": "2",
              "color": "{palette.french-vanilla.100}",
              "type": "dropShadow"
            },
            {
              "x": "0",
              "y": "0",
              "blur": "0",
              "spread": "4",
              "color": "{brand.common.focus-outline}",
              "type": "dropShadow"
            }
          ],
          "type": "boxShadow"
        }
      },
      "inactive": {
        "value": [
          {
            "x": "0",
            "y": "0",
            "blur": "0",
            "spread": "2",
            "color": "{brand.common.focus-outline}",
            "type": "innerShadow"
          }
        ],
        "type": "boxShadow"
      },
      "error": {
        "value": [
          {
            "x": "0",
            "y": "0",
            "blur": "0",
            "spread": "2",
            "color": "{brand.common.error-inner}",
            "type": "innerShadow"
          }
        ],
        "type": "boxShadow"
      },
      "alert": {
        "value": [
          {
            "x": "0",
            "y": "0",
            "blur": "0",
            "spread": "3",
            "color": "{brand.common.alert-inner}",
            "type": "innerShadow"
          }
        ],
        "type": "boxShadow"
      }
    }
  }
}